<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>vsi.ac</path>

<animation>
  <type>scale</type>
  <x-offset>0.8</x-offset>
  <y-offset>0.8</y-offset>
  <z-offset>0.8</z-offset>
 </animation>
 
  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>glass.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
        <emission>
            <red>0.028</red>
            <green>0.014</green>
            <blue>0.007</blue>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
    </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>instrumentation/vertical-speed-indicator/indicated-speed-fpm</property>
    <interpolation>
      <entry><ind> -2000 </ind><dep> -180.0 </dep></entry>
      <entry><ind> -1500 </ind><dep> -126.0 </dep></entry>
      <entry><ind> -1000 </ind><dep>  -85.0 </dep></entry>
      <entry><ind>  -500 </ind><dep>  -44 </dep></entry>
      <entry><ind>     0 </ind><dep>    0.0 </dep></entry>
      <entry><ind>   500 </ind><dep>   44 </dep></entry>
      <entry><ind>  1000 </ind><dep>   85.0 </dep></entry>
      <entry><ind>  1500 </ind><dep>  126.0 </dep></entry>
      <entry><ind>  2000 </ind><dep>  180.0 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
  </animation>

</PropertyList>
