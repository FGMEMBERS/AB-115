<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>oiltemp.ac</path>
  
 <animation>
  <type>scale</type>
  <x-offset>1.065899</x-offset>
  <y-offset>1.065899</y-offset>
  <z-offset>1.065899</z-offset>
 </animation>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>face</object-name>
    <object-name>needle</object-name>
    <emission>
            <red>0.028</red>
            <green>0.014</green>
            <blue>0.007</blue>
            <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>engines/engine[0]/oil-temperature-degf</property>
    <interpolation>
      <entry><ind>-40.00 </ind><dep> -45 </dep></entry>
      <entry><ind>  0.00 </ind><dep>   0 </dep></entry>
      <entry><ind>248.00 </ind><dep> 142 </dep></entry>
    </interpolation>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>


